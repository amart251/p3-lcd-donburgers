CC = msp430-elf-gcc
CPU = msp430g2553
CFLAGS = -mmcu=${CPU} -I. -I../h -L/opt/ti/msp430_gcc/include
OBJS = main.o button.o timer.o delay.o buzzer.o melodies.o lcd.o lcdutils.o lcddraw.h lcdtypes.h
TARGET = main.elf 

all: $(TARGET)

$(TARGET): $(OBJS)
	$(CC) $(CFLAGS) -o $@ $^

load: $(TARGET)
	msp430loader.sh $^

clean:
	rm -f *.o *.elf